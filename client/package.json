{
  "name": "food-advisor",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "apollo-boost": "^0.1.28",
    "graphql": "^14.1.1",
    "react": "^16.8.2",
    "react-apollo": "^2.4.1",
    "react-dom": "^16.8.2",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.5",
    "react-test-renderer": "^16.8.2",
    "styled-components": "^4.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "pretest": "rimraf ./coverage",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "generate": "plop --plopfile internals/generators/index.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "jest-enzyme": "^7.0.1",
    "jest-styled-components": "^6.3.1",
    "plop": "^2.2.0",
    "waait": "^1.0.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/**/*.{js,jsx}",
      "!src/**/**/tests/*.test.{js,jsx}",
      "!src/queries/*.js",
      "!src/*.js",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
